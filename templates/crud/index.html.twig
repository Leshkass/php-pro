{% extends 'base.html.twig' %}


{% block body %}

    <h2>Car list</h2>
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">Brand</th>
            <th scope="col">Model</th>
            <th scope="col">Year</th>
            <th scope="col">Color</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

        {% if cars|length %}
            {% for car in cars %}
                <tr>
                    <th scope="row">{{ car.brand }}</th>
                    <td>{{ car.model }}</td>
                    <td>{{ car.year }}</td>
                    <td>{{ car.color }}</td>
                    <td>
                        <a href="{{ path('app_crud_show_car', {id: car.id}) }}" type="button" class="btn btn-outline-success">Show</a>
                        <a href="{{ path('app_crud_update_car', {id: car.id}) }}" type="button" class="btn btn-outline-info">Edit</a>
                        <a href="{{ path('app_crud_delete_car', {id: car.id}) }}" type="button" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>


    <p>
        <a href="{{ path('app_crud_new_car') }}">Add Car</a>

        {% if app.request.get('page') %}
            | <a href="{{ path('app_crud_car_index', {'page': 1}) }}">First</a>
            | <a href="{{ path('app_crud_car_index', {'page': app.request.get('page') - 1}) }}">Previous</a>
        {% endif %}

        | <a href="{{ path('app_crud_car_index', {'page': app.request.get('page',1) + 1}) }}">Next</a>
    </p>

{% endblock %}